---
layout: null
searchable: false

lede: All of my pens.
---

<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">

    <channel>

        <title>{{ site.title | xml_escape }} â€“ Pens Only</title>
        <description>{{ page.lede | xml_escape }}</description>
        <link>{{ '/pens' | prepend: site.baseurl | prepend: site.url }}</link>
        <atom:link href="{{ '/feed-pens.xml' | prepend: site.baseurl | prepend: site.url }}" rel="self" type="application/rss+xml"/>
        <language>en</language>

        <image>
            <url>{{ '/favicon.png' | prepend: site.baseurl | prepend: site.url }}</url>
            <title>{{ site.author.name }}</title>
            <link>{{ site.baseurl | prepend: site.url }}</link>
        </image>

        {% for post in site.categories.pen %}
            <item>
                <title>{{ post.title }}</title>
                <link>{{ post.url | prepend: site.baseurl | prepend: site.url }}</link>
                <pubDate>{{ post.date | date_to_xmlschema }}</pubDate>
                <category>{{ post.categories }}</category>
                {% if post.lede %}<description>{{ post.lede }}</description>{% endif %}
            </item>
        {% endfor %}

    </channel>

</rss>
