<style>
	.root {
		box-sizing: border-box;
		background: linear-gradient(to bottom, #20323d, #3e5c6d);
		color: #f9f9f9;
		width: 100%;
		height: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 32px;
	}
	.header {
		display: flex;
		flex-direction: column;
		margin: auto 0;
	}
	.title {
		margin: 0;
		font-size: 72px;
		line-height: 1.429;
	}
	.title ~ p {
		max-width: 25em;
		margin-top: 20px;
		margin-bottom: 0;
		font-size: 24px;
		line-height: 1.875;
	}
	.meta {
		width: 100%;
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		font-size: 32px;
	}
	.meta div {
		display: flex;
	}
	.meta img {
		width: 64px;
		height: 64px;
		margin-top: -20px;
		margin-right: 16px;
		vertical-align: middle;
	}
</style>
<div class="root">
	<div class="header">
		<h1 class="title">{{ title | safe }}</h1>
		{% if description %}<p>{{ description | formatAsMarkdown | striptags(true) | safe }}</p>{% endif %}
	</div>
	<div class="meta">
		<div>
			<img src="data:image/png;base64,">
			<span>chrisburnell.com</span>
		</div>
		{% if date %}<div>{{ date | friendlyDate | safe }}</div>{% endif %}
	</div>
</div>
