---
layout: base
---
<article id="content" class=" [ pantheon{% if full %}  full{% elif wide %}  wide{% endif %} ] [ wrap ] [ page ] ">

	{% if 'project' in tags %}
		<ul class=" [ cluster ] [ breadcrumbs ] ">
			<li><a href="/projects/">‚Üê Projects</a></li>
		</ul>
	{% endif %}

	<h1 id="title" class=" [ title{% if title_error %} title--negative{% elif title_success %} title--positive{% endif %} ] ">
		{%- if perch %}
			<span class=" [ perch ] [ p-name ] ">
				{{ tagline | default(title) | safe }}
				<img src="{{ site.logo }}" alt="" width="324" height="324" loading="lazy" decoding="async" role="presentation" hidden>
			</span>
		{%- else -%}
			<span class=" [ p-name ] ">{{ tagline | default(title) | safe }}</span>
		{%- endif %}
	</h1>

	<div class=" [ description ] [ flow ] [ p-summary ] ">
		{{ descriptionLong | default(description) | markdownFormat | safe }}
	</div>

	<div class=" [ content ] [ flow ] ">
		{% include 'cssnakedday.njk' %}

		<div class=" [ e-content ] [ flow ] {% if contentClass %}[ {{ contentClass }} ] {% endif %}{% if toc %}generate-toc{% endif %}">
			{{ content | safe }}
		</div>
	</div>

	{% if not full and not toc %}
		<aside class=" [ meta ] [ flow ] " role="complementary">
			{% include 'meta/page.njk' %}
		</aside>
	{% endif %}

	{% include 'responses.njk' %}

	{% include 'ads.njk' %}
</article>
