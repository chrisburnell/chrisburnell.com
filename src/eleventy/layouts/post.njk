---
layout: base
---
{% if show_reading_length -%}
	{% set content_wordcount = content | removeTagsForWordcount | striptags | safe | wordcount | toNearest(25, true) | numberStringFormat %}
{%- endif -%}
<article {% if not content.length %}id="content"{% endif %} class=" [ pantheon{% if full %}  full{% endif %} ] [ wrap ] [ post h-{{ mf_root }} ] {% if perch %}[ perch ] {% endif %}">
	<ul class=" [ cluster ] [ breadcrumbs ] " data-pagefind-ignore>
		<li><a href="/posts/">All Posts</a></li><li><a href="/{{ categoryPlural | default(category) }}/">{{ categoryProperPlural | default(categoryPlural) | default(category) | title }}</a></li>
	</ul>

	<div class=" [ context ] [ flow ] ">
		<p data-pagefind-ignore>
			{%- if rsvp %}
				This <a href="/rsvps/" class=" [ u-tag ] " data-pagefind-sort="tag" data-pagefind-filter="tag">RSVP</a>
			{%- else %}
				This <a href="/{{ categoryPlural | default(category) }}/" class=" [ u-category ] " data-pagefind-sort="category" data-pagefind-filter="category">{{ categoryProper | default(category) }}</a>{% if 'writing' in tags %}, part of the <a href="/writing/" class=" [ u-tag ] " data-pagefind-filter="tag" data-pagefind-filter="tag">writing</a> collection{% if not in_reply_to %},{% endif %}{% endif %}
			{%- endif -%}
			{%- if draft %}
				has not yet been published
			{%- else -%}
				{%- if in_reply_to and not rsvp -%}
					{%- if 'writing' in tags %} and{% else %},{% endif %} in reply to
					<a href="{{ reply_url }}" class=" [ h-cite  u-in-reply-to ] ">{{ reply_title }}</a>
					{%- if reply_author_string and (reply_author_string | striptags) != reply_title %}
						by {{ reply_author_string | safe }}
					{%- endif %},
				{%- endif %}
				was published on <time datetime="{{ date | rfc3339Date }}" class=" [ dt-published ] " data-pagefind-meta="date[datetime]" data-pagefind-sort="date[datetime]">{{ date | friendlyDateLong | safe }}</time>{% if updated %}, last updated on <time datetime="{{ updated | rfc3339Date }}" class=" [ dt-updated ] ">{{ updated | friendlyDateLong | safe }}</time>{% endif %}
			{%- endif %}
			{%- if content_wordcount -%}
				{{ ',' if updated }} and has ~{{ content_wordcount }} words
			{%- endif -%}.
		</p>
		{% set rssOnlyDays = rss_only_days | default(site.limits.rssOnlyDays) -%}
		{% if 'rss-only' in tags -%}
			{% set recent = date | isRecent(rssOnlyDays) -%}
			{% set adjusted = date | adjustDatetime({ days: rssOnlyDays }) -%}
			<p>This {{ categoryProper | default(category) }} is also part of <a href="https://daverupert.com/rss-club/" rel="external noopener">RSS Club</a>, which means it {{ 'appears' if recent else 'appeared' }} <em>only</em> in my RSS feeds for {{ rssOnlyDays }} days ({{ 'until' if recent else 'released' }} <time datetime="{{ adjusted | rfc3339Date }}">{{ adjusted | friendlyDateLong }}</time>), rewarding folks who use RSS with knowing about this post early!</p>
		{%- endif %}
	</div>

	<h1 id="title" class=" [ title{% if title_error %} title--negative{% elif title_success %} title--positive{% endif %} ] {{ '[ visually-hidden ] ' if not title and not of_title }}" style="view-transition-name: title-{{ page.fileSlug }};"{% if not title and not of_title %} aria-hidden="true"{% endif %}>
		<span class=" [ p-name ] " data-pagefind-meta="title" data-pagefind-sort="title">{{ title | default(of_title) | default(of_title_fallback) | default(meta_title) | striptags(true) | safe }}</span>
	</h1>

	<div class=" [ content ] [ flow ] {% if toc %}generate-toc{% endif %}">
		{% if global.isJSNakedDay -%}
			{% include 'js-naked-day.njk' %}
		{%- endif %}

		{% if draft -%}
			{% include 'draft.njk' %}
		{%- endif %}

		{% include 'banner.njk' %}

		{% if cover %}
			{% set alt = 'Art for ' + (title | default(of_title) | striptags(false) | safe) -%}
			{% image './images/covers/' + cover, alt, ' [ cover ] [ u-photo ] ', [400] %}
		{% endif %}

		{% include 'photo.njk' %}

		{% if rating %}
			<div class=" [ center ] " style="display: flex; gap: 1em; font-size: var(--font-size-beta-min);">
				{% if rating == 'Parti Pris' %}
					<data class=" [ small ] [ p-rating ] " value="Parti Pris">Parti Pris</data>
				{% else %}
					<data class=" [ rating ] [ p-rating ] " value="{{ rating }}" title="{{ rating }} out of 5" style="--rating: {{ rating }};" style="--rating-font-size: var(--font-size-beta);"> </data>
					<strong>{{ rating }}/5</strong>
					<data class=" [ p-worst ] " value="0" hidden>0</data>
					<data class=" [ p-best ] " value="5" hidden>5</data>
				{% endif %}
			</div>
		{% endif %}

		{% if description %}
			<div class=" [ description ] [ flow ] [ p-summary ] ">
				{{ description | markdownFormat | safe }}
			</div>
		{% endif %}

			<div id="content" class=" [ flow ] [ e-content ] ">
				{% include 'updated.njk' %}

				{% for pre_include in (pre_includes | toArray) -%}
					{% include pre_include %}
				{%- endfor %}

				{% if content.length -%}
					{{- content | safe -}}
				{%- endif %}

				{% if of_label -%}
					<nav class=" [ grid ] [ navigator ] ">
						<a href="{{ of_url }}" class=" [ button ] {% if mf_property %}[ u-{{ mf_property }} ] {% endif %}" rel="external noopener">{{ of_label | safe }} â†’</a>
					</nav>
				{%- endif %}

				{% for post_include in (post_includes | toArray) -%}
					{% include post_include %}
				{%- endfor %}
			</div>
	</div>

	<div class=" [ meta ] " data-pagefind-ignore>
		<div class=" [ grid ] " data-rows="masonry">
			{% include 'meta/post.njk' %}
		</div>
	</div>

	{% include 'browse.njk' %}
</article>
