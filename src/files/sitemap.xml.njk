<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
	{% for item in collections.all | keySort('inputPath') | arePublished | sitemapFilter -%}
	<url>
		<loc>{{ site.url + item.url }}</loc>
		<lastmod>{{ item.data.updated | default(item.data.date) | default(global.nowISO) | w3cDate }}</lastmod>
		<changefreq>{{ item.data.sitemap.changefreq | default(site.sitemap.changefreq) }}</changefreq>
		<priority>{{ item.data.sitemap.priority | default(site.sitemap.priority) }}</priority>
	</url>
	{% endfor -%}
	{% for category in collections.categories -%}
	<url>
		<loc>{{ site.url + '/' + category.plural + '/' }}</loc>
		<lastmod>{{ global.nowISO | w3cDate }}</lastmod>
		<changefreq>{{ site.sitemap.changefreq }}</changefreq>
		<priority>{{ site.sitemap.priority }}</priority>
	</url>
	{%- endfor %}
	{% for tag in collections.tags -%}
	<url>
		<loc>{{ site.url + '/tag/' + tag + '/' }}</loc>
		<lastmod>{{ global.nowISO | w3cDate }}</lastmod>
		<changefreq>{{ site.sitemap.changefreq }}</changefreq>
		<priority>{{ site.sitemap.priority }}</priority>
	</url>
	{%- endfor %}
</urlset>
