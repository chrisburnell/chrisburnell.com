---
title: Stats
description: Numbers, cause why not?
---

{%- set collection = collections.posts -%}
{%- set count = collection.length -%}
{%- set latest_year = collection[0].date.getFullYear() -%}
{%- set first_year = collection[count-1].date.getFullYear() -%}

{%- set blog_count = 0 -%}
{%- for i in range(first_year, latest_year + 1) -%}
	{%- set blog_count = blog_count + collection | getCollectionCount(i, true) -%}
{%- endfor -%}
{%- set blog_count_average = blog_count / (latest_year - first_year + 1) -%}

{%- set wordiest_post_index = 0 -%}
{%- set wordiest_wordcount = 0 -%}
{%- set blog_wordcount = 0 -%}
{%- for item in collection -%}
	{%- set wordCount = item.content | cleantags | striptags | safe | wordcount -%}
	{%- set blog_wordcount = blog_wordcount + wordCount -%}
	{%- if wordCount > wordiest_wordcount -%}
		{%- set wordiest_wordcount = wordCount -%}
		{%- set wordiest_post_index = loop.index0 -%}
	{%- endif -%}
{%- endfor -%}

{%- set first_commit = repository.information.created_at | epoch -%}
{%- set days_since_first_commit = (global.now - first_commit) / 86400002 -%}
{%- set commits_per_day = repository.contributors[0].contributions / days_since_first_commit -%}

<dl>
	<dt>â„– Posts</dt>
	<dd>{{ count | numberStringFormat }}</dd>
	<dt>â„– Blog Posts</dt>
	<dd>{{ blog_count | numberStringFormat }}</dd>
	<dt>Blog Word Count</dt>
	<dd>{{ blog_wordcount | numberStringFormat }}</dd>
	<dt>Most Verbose</dt>
	<dd><a href="{{ collection[wordiest_post_index].url }}">{{ collection[wordiest_post_index].data.title }}</a> <small>with</small> {{ wordiest_wordcount | numberStringFormat }} words</dd>
	<dt>â„– Projects</dt>
	<dd><a href="/projects/">{{ (projects.web.length + projects.personal.length + collections.projects.length) | numberStringFormat }}</a></dd>
	<dt>â„– Following</dt>
	<dd><a href="/blogroll/">{{ blogroll | length | numberStringFormat }}</a></dd>
	<dt>â„– Webmentions</dt>
	<dd>{{ webmentionsAll | length | numberStringFormat }}</dd>
	<dt>Commits <small>per</small> Day</dt>
	<dd><a href="https://github.com/{{ author.github }}/{{ site.repository }}/commits/{{ site.branch }}">{{ commits_per_day | maxDecimals(2) }}</a> <small>({{ repository.contributors[0].contributions | numberStringFormat }} commits over <span title="since {{ repository.information.created_at | friendlyDate }}">{{ (days_since_first_commit / 365.2422) | maxDecimals(2) }} years</span>)</small></dd>
</dl>

<h2><a href="/posts/">All Posts</a></h2>

<div class=" [ grid  center ] " style="--min-inline-size: 100%;">{% sparkline collection, first_year, latest_year, false %}</div>

{%- set collection = collection | reverse -%}
{%- set year = first_year -%}
<figure class=" [ scroll-inline  scroll-inline-shadow ] ">
	<table>
		<tbody>
			<tr>
				<th><div class="shadow-child" style="white-space: nowrap;">Year</div></th>
				{% for i in range(first_year, latest_year + 1) %}
					<td><strong>{{ i }}</strong></td>
				{% endfor %}
			</tr>
			<tr>
				<th><div class="shadow-child" style="white-space: nowrap;">Blog Posts</div></th>
				{% for i in range(first_year, latest_year + 1) -%}
					{% set count = collection | getCollectionCount(i, true) -%}
					<td class=" [ numeral{% if count > blog_count_average %} strong {% endif %} ] ">{{ collection | getCollectionCount(i, true) }}</td>
				{%- endfor %}
			</tr>
		</tbody>
	</table>
</figure>

<h2>Collections</h2>

<ul class=" [ grid ] [ shelf ] " data-layout="natural">
	<li><a href="/latest/" class=" [ strong ] " style="font-size: var(--font-size-gamma);">Latest Posts <sup>{{ site.limits.feed }}</sup></a></li>
	<li><a href="/hot/" class=" [ strong ] " style="font-size: var(--font-size-gamma);">Hot Pages <sup>{{ site.limits.feed }}</sup></a></li>
	<li><a href="/popular/" class=" [ strong ] " style="font-size: var(--font-size-gamma);">Popular Pages <sup>{{ site.limits.feed }}</sup></a></li>
	<li><a href="/writing/" class=" [ strong ] " style="font-size: var(--font-size-gamma);">Writing <sup>{{ collections.writingPosts | getCollectionCount }}</sup></a></li>
	<li><a href="/replies/" class=" [ strong ] " style="font-size: var(--font-size-gamma);">Replies <sup>{{ collections.replies | getCollectionCount }}</sup></a></li>
	<li><a href="/rsvps/" class=" [ strong ] " style="font-size: var(--font-size-gamma);">RSVPs <sup>{{ collections.rsvps | getCollectionCount }}</sup></a></li>
	<li><a href="/attendances/" class=" [ strong ] " style="font-size: var(--font-size-gamma);">Attendances <sup>{{ collections.attendances | getCollectionCount }}</sup></a></li>
	<li><a href="/checkins/" class=" [ strong ] " style="font-size: var(--font-size-gamma);">Checkins <sup>{{ collections.checkins | getCollectionCount }}</sup></a></li>
</ul>

<h2>Categories</h2>

<ul class=" [ grid ] [ shelf ] " data-layout="natural">
	{%- for item in collections.categories -%}
		{%- set count = collections[item.title] | arePublished | getCollectionCount -%}
		<li><a href="/{{ item.plural }}/" class=" [ strong ] " style="font-size: var(--font-size-gamma);"><c-emoji>{{ item.emoji | default('ðŸ“„') }}</c-emoji> {{ item.properPlural | title }} <sup>{{ count }}</sup></a></li>
	{%- endfor -%}
</ul>

<h2>Tags</h2>

<ul class=" [ grid ] [ shelf ] " data-layout="natural">
	{%- set lowest = 9001 -%}
	{%- set highest = 0 -%}
	{%- for item in collections.tags | sort -%}
		{%- set count = collections[item] | arePublished | getCollectionCount -%}
		{%- if count < lowest -%}
			{%- set lowest = count -%}
		{%- elif count > highest -%}
			{%- set highest = count -%}
		{%- endif -%}
	{%- endfor -%}
	{%- for item in collections.tags | sort -%}
		{%- set count = collections[item] | arePublished | getCollectionCount -%}
		{# map range from lowestâ€“highest to 1â€“1.375, 3 decimal places #}
		{%- set fontSize = count | rangeMap(lowest, highest, 1, 1.375, 3) -%}
		<li><a href="/tag/{{ item }}/" class=" [ strong ] " style="font-size: {{ fontSize }}em;">{{ item }} <sup>{{ count }}</sup></a></li>
	{%- endfor -%}
</ul>
