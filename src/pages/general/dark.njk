<style>
.family-tree {
	display: grid;
	align-items: end;
	justify-content: center;

	& > div {
		--image-size: 4.5em;
		--line-size: 4px;

		display: flex;
		flex-direction: column-reverse;
		gap: 0.5em;
		text-align: center;
		line-height: 1.3;

		& > p {
			block-size: 2lh;
			white-space: nowrap;
			text-shadow: 0 1px 4px light-dark(var(--color-snowy), var(--color-mineshaft));
			z-index: 3;
		}
	}
}

.ft1 {
	grid-template:
		"ulrich j1     katharina .     " 1fr
		".      mikkel j2        hannah" 1fr
		".      .      jonas     .     " 1fr /
		 1fr    1fr    1fr       1fr;
}

.ft2 {
	grid-template:
		"ulrichA2  l01   ulrichT  .        katharinaT  l02  mikkelT   .      hannahT" 2fr
		"l18       l03   l04      .        l05         l06  l07       .      l08    " 1fr
		"ulrichO   l09   ulrichA  l10      katharinaA  l11  mikkelA   l12    hannahA" 2fr
		".         .     l19      l13      l20         l14  .         l15    .      " 1fr
		".         .     magnus   martha   mikkelY     l17  .         jonas  .      " 2fr / 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr;
}

.image-grid {
	display: flex;
	flex-wrap: nowrap;
	justify-content: center;
	z-index: 2;

	& > img {
		inline-size: var(--image-size);
		aspect-ratio: 1;
		display: block;
		border-radius: 50%;
		object-fit: cover;
		margin: 0;
		outline: 2px solid;

		& + img {
			margin-inline-start: calc(var(--image-size) * -2/9);
		}
	}
}

:is(.vr, .hr) {
	block-size: 100%;
	position: relative;
}

.hr {
	&::before {
		content: "";
		background-color: color-mix(in oklab, var(--hr-line-color, var(--line-color, currentColor)), light-dark(var(--color-snowy), var(--color-mineshaft)));
		inline-size: 160%;
		block-size: var(--line-size);
		position: absolute;
		top: calc(100% - 2lh - 0.5em - var(--image-size) / 2 - var(--line-size) / 2);
		left: 50%;
		transform: translateX(-50%);
		z-index: 1;
	}
}

.vr {
	&::after {
		content: "";
		background-color: color-mix(in oklab, var(--vr-line-color, var(--line-color, currentColor)), light-dark(var(--color-snowy), var(--color-mineshaft)));
		inline-size: var(--line-size);
		block-size: 200%;
		position: absolute;
		top: 0;
		left: 50%;
		transform: translateX(-50%) translateY(-50%);
		z-index: 1;
	}
}

.top-only::after {
	clip-path: polygon(0% 0%, 100% 0%, 100% calc(100% - 2lh - 0.5em - var(--image-size) / 2 + var(--line-size) / 2), 0% calc(100% - 2lh - 0.5em - var(--image-size) / 2 + var(--line-size) / 2));
}

.bottom-only::after {
	clip-path: polygon(0% calc(100% - 2lh - 0.5em - var(--image-size) / 2), 100% calc(100% - 2lh - 0.5em - var(--image-size) / 2), 100% 100%, 0% 100%);
}

.left-only::before {
	clip-path: polygon(0% 0%, calc(50% + var(--line-size) / 2) 0%, calc(50% + var(--line-size) / 2) 100%, 0% 100%);
}

.right-only::before {
	clip-path: polygon(calc(50% - var(--line-size) / 2) 0%, 100% 0%, 100% 100%, calc(50% - var(--line-size) / 2) 100%);
}
</style>
