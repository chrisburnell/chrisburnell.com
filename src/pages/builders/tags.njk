---
pagination:
  data: collections.tags
  size: 1
  alias: tag
permalink: /tag/{{ tag }}/
eleventyComputed:
  title: "{{ tag | capitalizeFormat }}"
  description: "All of my posts tagged with <q>{{ tag | capitalizeFormat }}</q>."
hfeed: true
show_photos: true
truncate: true
---
{%- set collection = collections[tag] | arePublished | dateSort -%}
{%- set count = collection.length -%}
{%- set latest_year = collection[0].date.getFullYear() -%}
{%- set first_year = collection[count-1].date.getFullYear() -%}
<div id="content" class=" [ pantheon ] [ wrap ] [ archive ] ">

	<ul class=" [ cluster ] [ breadcrumbs ] " hidden>
		<li>
			<a href="/archive/">All Posts</a>
		</li>
		<li aria-hidden="true">
			{{ tag | capitalizeFormat }}
		</li>
	</ul>

	<h1 id="title" class=" [ title ] ">
		<span class=" [ p-name ] " aria-title="Tagged: {{ tag | capitalizeFormat }}">{{ title | safe }}</span>
	</h1>

	<div class=" [ description ] [ flow ] ">
		<p>
			<span class=" [ p-summary ] ">{% if count > 1 %}All {{ count | numberStringFormat }}{% else %}Just the one{% endif %} of my posts tagged <q>{{ tag | capitalizeFormat }}</q>.</span>
			<a href="{{ site.url }}/{{ tag }}.xml" title="Tagged: {{ tag | capitalizeFormat | safe }} Feed"><svg width="20" height="20" aria-hidden="true" focusable="false" style="fill: #ff8c00"><use href="#svg--rss"></use></svg></a>
		</p>
	</div>

	{% if first_year != latest_year %}
		{% sparkline collection, first_year, latest_year %}
	{% endif %}

	<div class=" [ content ] [ flow ] ">
		{% include 'cssnakedday.njk' %}

		<div class=" [ deck ] ">
			{% for item in collection %}
				{% include 'items/deck.njk' %}
			{% endfor %}
		</div>
	</div>

	<div class=" [ meta ] [ flow ] ">
		{% include 'meta/archive.njk' %}
	</div>

</div>
