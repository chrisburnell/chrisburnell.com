{
  "gutter": "var(--size-medium)",
  "gap": "calc(var(--size-gutter) * 2)",
  "space": "clamp(1.5em, 0.04rem + 1.86vw, 2.25em)",
  "header": "calc(var(--size-logo-small) / 1.5 + var(--size-small) * 2)",
  "aside": "clamp(15rem, 7.71rem + 13.71vw, 18rem)",
  "avatar": "100px",
  "avatar-small": "48px",
  "logo": "clamp(9rem, -3.6rem + 28.8vw, 18rem)",
  "logo-small": "clamp(5rem, 0.825rem + 6.667vw, 7.5rem)",
  "character-limit": "60ch",
  "line-length": "clamp(21em, 100vw, 30em)",
  "border-default": "4px",
  "border-thin": "2px"
}
